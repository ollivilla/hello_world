# template for "Stopwatch: The Game"

import simplegui

# define global variables
value = 0
win_counter = 0
tries_counter = 0

# define helper function format that converts time
# in tenths of seconds into formatted string A:BC.D
def format(t):
    global d
    a = t / 600 # minutes calculated from tenths of seconds generated by timer
    b = ((t / 10) % 60) / 10 
    c = ((t / 10) % 60) % 10
    d = t % 10 # tenths of seconds
    
    return str(a) +':'+ str(b) + str(c) + '.' + str(d)
   
# define event handlers for buttons; "Start", "Stop", "Reset"
def button_handler_start():
    timer.start()
    
def button_handler_stop():
    global d, win_counter, tries_counter
    
    tries_counter += 1
    
    if d == 0: #d == 0 resulted sometimes in such a race condition that when d = 1 then win_counter was increased
        win_counter += 1
    timer.stop()
       
    return win_counter, tries_counter
     
def button_handler_reset():
    global win_counter, tries_counter
    win_counter = 0
    tries_counter = 0
    timer2 = simplegui.create_timer(100, timer_handler)

# define event handler for timer with 0.1 sec interval
def timer_handler():
    global value
    (value % 10) == 0
    value += 1
    return value

timer = simplegui.create_timer(100, timer_handler)

# define draw handler
def draw_handler(canvas):
    canvas.draw_text(format(value), (38, 80), 32, 'White', 'serif')
    canvas.draw_text(str(win_counter) + '/' + str(tries_counter), (100, 20), 20, 'Green', 'serif')
    
    
# create frame
frame = simplegui.create_frame('Stopwatch', 150, 150)

# register event handlers
frame.set_canvas_background('Gray')
frame.set_draw_handler(draw_handler)
start_button = frame.add_button('Start', button_handler_start, 100)
stop_button = frame.add_button('Stop', button_handler_stop, 100)
reset_button = frame.add_button('Reset', button_handler_reset, 100)

# start frame and timer
frame.start()
#timer.start()

