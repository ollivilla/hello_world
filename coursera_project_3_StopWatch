# template for "Stopwatch: The Game"

import simplegui
import time


# define global variables
message = ''
value = 0





# define helper function format that converts time
# in tenths of seconds into formatted string A:BC.D
def format(t):
    pass
    
# define event handlers for buttons; "Start", "Stop", "Reset"
def button_handler_start():
    global message
    message = 'Start'
    
def button_handler_stop():
    global message
    message = 'Stop'

def button_handler_reset():
    global message
    message = 'Reset'

# define event handler for timer with 0.1 sec interval
def timer_handler():
    global value
    value = value + 1


timer = simplegui.create_timer(100, timer_handler)

# define draw handler
def draw_handler(canvas):
    canvas.draw_text(str(value), (110, 105), 32, 'White', 'serif')
    
# create frame
frame = simplegui.create_frame('Stopwatch', 300, 200)

# register event handlers
frame.set_canvas_background('Gray')
frame.set_draw_handler(draw_handler)
start_button = frame.add_button('Start', button_handler_start, 50)
stop_button = frame.add_button('Stop', button_handler_stop, 50)
reset_button = frame.add_button('Reset', button_handler_reset, 50)

# start frame
frame.start()
timer.start()

